{
  "name": "Bison Chrome",
  "description": "Wallet extension with full support for Decred",
  "version": "1.2",
  "manifest_version": 3,
  "author": "Bison",
  "offline_enabled": true,
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "permissions": [
    "alarms",
    "storage",
    "background",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "optional_permissions": [],
  "host_permissions": [
    "*://*/*",
    "file:///*/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": false,
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Ticketer"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "wasm_mod.js",
        "api.wasm",
        "sw.js"
      ]
    }
  ],
  "icons": {
    "16": "images/ticket.png",
    "24": "images/ticket_24.png",
    "32": "images/ticket_32.png",
    "64": "images/ticket_64.png",
    "128": "images/ticket_128.png",
    "256": "images/ticket_256.png"
  }
}